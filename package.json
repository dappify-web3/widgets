{
  "name": "@dappify/thirdweb",
  "version": "0.1.9",
  "type": "module",
  "scripts": {
    "start": "parcel index.html",
    "build": "parcel build src/widgets.js --no-scope-hoist --no-optimize --no-source-maps --dist-dir dist --public-url ./ --no-content-hash",
    "test": "jest --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "15.2.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "thirdweb": "^5.92.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "babel-jest": "^29.7.0",
    "buffer": "^6.0.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jsdom": "^26.0.0",
    "parcel": "^2.12.0",
    "process": "^0.11.10"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json-summary",
      "json",
      "text",
      "html",
      "lcov"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "parcel": {
    "extends": "@parcel/config-default",
    "resolvers": [
      "@parcel/resolver-default"
    ]
  },
  "@parcel/resolver-default": {
    "packageExports": true
  },
  "browserslist": [
    "defaults"
  ]
}
